<div class="row ">
  <div class="container centered">
    <div class="col-sm-11 ml-5 ">
      <div class="container mt-5">
        <div class=" card ">
          <div class="card-header">
            <ul class="nav nav-pills card-header-pills">
              <li class="nav-item">
                <%= link_to "Comment", root_path,  class: "nav-link "%>
              </li>
              <li class="nav-item">
                <%= link_to "Cancel", root_path, class: "nav-link "%>
              </li>
            </ul>
          </div>
          <div class="card-body text-center">
            <strong><%= @article.title %></strong>
          </div>
          <div class="card-body text-center">
            <%= @article.body %>
          </div>
          <div class="card-footer text-muted">
            <%if user_present?%>
              <% unless liked?(@article.user, @article)%>
                <%= link_to  article_likes_path(@article), method: :post do%>
                  <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-heart" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                  </svg>
                <%end%>
              <%else%>
                <%= link_to  article_like_path(@article, @article.user.likes), method: :delete do%>
                  <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-heart-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                  </svg>
                <%end%>
              <%end%>
            <%end%>
            <%= @article.likes.count %> likes
            <br>
            <%= link_to "Show all", article_like_path(@article, @article.likes) %>
          </div>
          <div class="card-footer text-muted">
            <strong><%=time_ago_in_words(@article.created_at)%> ago</strong>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
